{
    "tasks": [
        {
            "type": "shell",
            "label": "clean",
            "command": "rm",
            "args": [
                "bin",
                "-r",
                "-f"
            ],
            "problemMatcher": [],
            "dependsOn": ""
        },
        {
            "type": "shell",
            "label": "bin",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceRoot}/bin"
            ],
            "problemMatcher": [],
            "dependsOn": "clean"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "$(find",
                "${workspaceRoot}",
                "-regex",
                "'.*cpp')",
                "-o",
                "${workspaceRoot}/bin/gen-ldif"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": "bin"
        }
    ],
    "inputs": [
        {
            "id": "assemblyName",
            "type": "promptString",
            "description": "Assembly Name"
        }
    ],
    "version": "2.0.0"
}